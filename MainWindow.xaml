<Window x:Class="GA_JuanHernandez_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GA_JuanHernandez_List"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <RichTextBox Height="190" Width="350" Canvas.Left="225" Canvas.Top="54" HorizontalAlignment="Center" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run Text="" Name="rtbDisplay"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="lblCurrentCount" Content="Student Count:" Canvas.Left="225" Canvas.Top="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="154"/>
        <Label Content="Student Name:" Canvas.Left="225" Canvas.Top="249"/>
        <TextBox x:Name="txtStudentName" Canvas.Left="319" TextWrapping="Wrap" Canvas.Top="253" Width="120"/>
        <Button x:Name="btnAddStudent" Content="Add Student" Canvas.Left="456" Canvas.Top="252" HorizontalAlignment="Left" VerticalAlignment="Center" Width="79" Click="btnAddStudent_Click"/>

    </Canvas>
</Window>
